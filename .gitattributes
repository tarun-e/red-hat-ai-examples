# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyx text eol=lf
*.pyi text eol=lf

# Jupyter Notebooks
*.ipynb text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Documentation
*.md text eol=lf
*.rst text eol=lf
*.txt text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.json text eol=lf
*.cfg text eol=lf
*.ini text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
.editorconfig text eol=lf

# Makefiles
Makefile text eol=lf
*.mk text eol=lf

# Docker files
Dockerfile text eol=lf
*.dockerfile text eol=lf
docker-compose*.yml text eol=lf

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text

# Archives
*.zip binary
*.tar binary
*.gz binary
*.bz2 binary
*.7z binary

# Jupyter notebook merge driver
*.ipynb merge=nbdev-merge

# Export ignore - files not included in archive exports
.github export-ignore
.gitignore export-ignore
.gitattributes export-ignore
.pre-commit-config.yaml export-ignore
tests/ export-ignore
*.md export-ignore
Makefile export-ignore
setup-dev.sh export-ignore
